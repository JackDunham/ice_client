FROM docker:24-cli

RUN apk add --no-cache \
    bash \
    bc \
    curl \
    docker-cli-compose \
    jq \
    netcat-openbsd

# docker compose v2 is included via docker-cli-compose

WORKDIR /scripts

COPY run_tests.sh /scripts/
RUN chmod +x /scripts/run_tests.sh

ENTRYPOINT ["bash", "/scripts/run_tests.sh"]